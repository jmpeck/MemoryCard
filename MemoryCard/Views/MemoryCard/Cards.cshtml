@model IEnumerable<MemoryCard.Models.Card>

@{
    ViewBag.Title = "Cards";
}

<h2>Cards</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@*This creates a table to show all the cards currently in the database*@
<table class="table table-responsive table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SideOne)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SideTwo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SideOne)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SideTwo)
        </td>
        @*This allows the user to edit or delete a desired card*@
        <td>
            @Html.ActionLink("Edit", "Update", new { id=item.CardID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CardID })
        </td>
    </tr>
}

</table>
